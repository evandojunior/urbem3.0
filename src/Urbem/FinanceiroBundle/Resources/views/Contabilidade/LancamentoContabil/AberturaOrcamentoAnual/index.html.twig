{% extends "base.html.twig" %}
{% block content %}
    <div class="container-rh">
        <div class="col s12 title-edit box-title-rh">
            <h5>{{ 'label.aberturaOrcamentoAnual.filtro'|trans }}</h5>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            <div class="col s6 field-filtro select-filtro">
                {{ form_label(form.codEntidade, null, {'label_attr': {'class': 'control-label label-rh-select'}}) }}
                {{ form_widget(form.codEntidade, {'attr': {'class': 'white input-rh-without-border browser-default'}}) }}
                {{ form_errors(form.codEntidade) }}
            </div>
            <div class="col s12" style="margin-top: 20px">
                <button type="submit" class="waves-effect waves-light btn blue darken-4 btn btn-success save right"
                        name="btn_update_and_list">
                        <i class="material-icons left">send</i>
                        Avan√ßar
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}
{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $("#form_codEntidade").select2();
        });
    </script>
{% endblock javascripts %}
